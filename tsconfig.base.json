{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@todo-nx/authentication-api": ["libs/authentication-api/src/index.ts"],
      "@todo-nx/email": ["libs/email/src/index.ts"],
      "@todo-nx/interfaces": ["libs/interfaces/src/index.ts"],
      "@todo-nx/react-components": ["libs/react-components/src/index.ts"],
      "@todo-nx/s3-api": ["libs/s3-api/src/index.ts"],
      "@todo-nx/theme": ["libs/theme/src/index.ts"],
      "@todo-nx/utils": ["libs/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
